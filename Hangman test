#Hang man
import random

#Need to do the letters and stuff

pack1 = ['doubt', 'envy', 'greed', 'fury', 'sloth',
  'depression', 'disgust', 'fear', 'love', 'pity']
pack2 = ['fly', 'ox', 'cougar', 'zebra', 'aardvark',
