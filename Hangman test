pack3 = ['revolutionary', 'physics', 'explicit', 'branch', 'inflation', 'radical', 'critical', 'monarch', 'harmony', 'sandwich']
correctLetters = set()

def hangStart():
  length = len(word)
  hidden = "_ "
  print ("=" * 25)
  print (hidden * length)
  print (word)
  guess = str.lower(input("Enter guess: "))
  return (checkRight(splitWord,guess))

def checkRight(splitWord,guess):
  #print ("hi")
  if guess in splitWord:
    for guess in splitWord:
      correctLetters.add(guess)
      splitWord.remove(guess)
      print (correctLetters)
      print (splitWord)
      return
  else:
    lives -= 1 #get this to do it right
    print ("wrong")
    

def wordSplit():
  s = word
  splitWord = list(s)
  return splitWord
  
lives = 9

packChoose = True
while packChoose == True:
  packChoice = input("What pack do you want to play? (1|2|3)")
  if packChoice == "1":
    hangmanOption1 = True
    word = random.choice(pack1)
    wordSplit()
    splitWord = wordSplit()
    print (splitWord)
    break
