    print (splitWord)
    break
  elif packChoice == "3":
    hangmanOption3 = True
    word = random.choice(pack3)
    wordSplit()
    splitWord = wordSplit()
    print (splitWord)
    break
  else:
    print ("Invalid answer")
    
while hangmanOption1 == True:
