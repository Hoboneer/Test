def checkRight(splitWord,guess,lives):
  #print ("hi")
  if guess in splitWord:
    for i in splitWord:
      if guess == i:
        correctLetters.append(i)
        splitWord.remove(i)
    print (correctLetters)
    print (splitWord)
    return
  else:
    lives -= 1 #get this to do it right
    print (lives)
    print ("wrong")
    return lives    

def wordSplit():
  s = word
  splitWord = list(s)
  return splitWord
  
lives = 9

packChoose = True
while packChoose == True:
  packChoice = input("What pack do you want to play? (1|2|3)")
  if packChoice == "1":
    hangmanOption1 = True
    word = random.choice(pack1)
    wordSplit()
    splitWord = wordSplit()
    print (splitWord)
    break
  elif packChoice == "2":
    hangmanOption2 = True
    word = random.choice(pack2)
